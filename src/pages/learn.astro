---
import MainLayout from "../layouts/MainLayout.astro";
import { Learn as LearnComponent } from "../components/Learn";

export const prerender = false;
---

<MainLayout title="Sesja powtórek">
  <div class="container mx-auto px-4 py-8">
    <div class="flex flex-col gap-4">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold tracking-tight">Sesja powtórek</h1>
          <p class="text-muted-foreground">Powtarzaj fiszki używając systemu powtórek rozłożonych w czasie</p>
        </div>
      </div>
      <LearnComponent client:load />
    </div>
  </div>
</MainLayout>
