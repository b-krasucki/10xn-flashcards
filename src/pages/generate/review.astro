---
import MainLayout from "../../layouts/MainLayout.astro";
import { ProposalReview } from "../../components/ProposalReview";

export const prerender = false;
---

<MainLayout title="Przegląd propozycji">
  <div class="container mx-auto px-4 py-8">
    <div class="flex flex-col gap-4">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold tracking-tight">Przegląd propozycji</h1>
          <p class="text-muted-foreground">Przejrzyj, edytuj i zaakceptuj wygenerowane fiszki</p>
        </div>
      </div>
      <ProposalReview client:load />
    </div>
  </div>
</MainLayout>
