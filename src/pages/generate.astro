---
import MainLayout from "../layouts/MainLayout.astro";
import { GenerateForm } from "../components/GenerateForm";

// Disable authentication for testing
export const prerender = false;
---

<MainLayout title="Generowanie fiszek">
  <div class="container mx-auto px-4 py-8">
    <div class="flex flex-col gap-4">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold tracking-tight text-white">Generowanie fiszek</h1>
          <p class="text-white/70">Twórz fiszki generowane przez AI na podstawie materiałów do nauki</p>
        </div>
      </div>
      <GenerateForm client:only="react" />
    </div>
  </div>
</MainLayout>
