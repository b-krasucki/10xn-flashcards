---
import "../styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;

import { Toaster } from "@/components/ui/sonner";
import { UserMenu } from "@/components/UserMenu";
import { Navigation } from "@/components/Navigation";
import { MobileMenu } from "@/components/MobileMenu";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | 10xn Flashcards</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="min-h-screen bg-background text-foreground">
    <div class="relative flex min-h-screen flex-col">
      <header
        class="sticky top-0 z-40 w-full border-b border-white/10 bg-black/20 backdrop-blur supports-[backdrop-filter]:bg-black/30"
      >
        <div class="container flex h-14 items-center">
          <!-- Logo with enhanced styling -->
          <a 
            href="/" 
            class="mr-8 flex items-center space-x-3 text-white group transition-all duration-200 hover:scale-105" 
            aria-label="Strona główna"
          >
            <img 
              src="/app-icon.png" 
              alt="10xn Flashcards" 
              class="h-8 w-8 rounded-lg shadow-lg shadow-purple-500/25 group-hover:shadow-purple-500/40 transition-all duration-200"
            />
            <div class="flex flex-col">
              <span class="font-bold text-lg bg-gradient-to-r from-white to-gray-300 bg-clip-text text-transparent">
                Flashcards
              </span>
              <span class="text-xs text-white/60 -mt-1">by xnHaZE</span>
            </div>
          </a>
          
          <!-- Navigation component -->
          <Navigation currentPath={Astro.url.pathname} client:load />
          <div class="ml-auto flex items-center space-x-4">
            <!-- User Menu with Avatar and Logout -->
            <UserMenu client:load />
            
            <!-- Mobile Menu -->
            <MobileMenu currentPath={Astro.url.pathname} client:load />
          </div>
        </div>
      </header>

      <main class="flex-1">
        <slot />
      </main>

      <footer class="border-t py-6 md:py-0">
        <div class="container flex h-14 items-center justify-between">
          <p class="text-sm text-muted-foreground">
            © 2024 10xn Flashcards. 
            <a href="/privacy" class="hover:text-foreground transition-colors">Polityka prywatności</a>
          </p>
        </div>
      </footer>
    </div>

    <Toaster client:load />
  </body>
</html>
