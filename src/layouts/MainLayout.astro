---
import "../styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;

import { Toaster } from "@/components/ui/sonner";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | 10xn Flashcards</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="min-h-screen bg-background text-foreground">
    <div class="relative flex min-h-screen flex-col">
      <header
        class="sticky top-0 z-40 w-full border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60"
      >
        <div class="container flex h-14 items-center">
          <a href="/" class="mr-6 flex items-center space-x-2" aria-label="Strona główna">
            <span class="font-bold">10xn Flashcards</span>
          </a>
          <nav class="hidden md:flex items-center space-x-6 text-sm font-medium">
            <a href="/" class="transition-colors hover:text-foreground/80">Dashboard</a>
            <a href="/generate" class="transition-colors hover:text-foreground/80">Generowanie</a>
            <a href="/flashcards" class="transition-colors hover:text-foreground/80">Moje talie</a>
            <a href="/learn" class="transition-colors hover:text-foreground/80">Sesja powtórek</a>
            <a href="/profile" class="transition-colors hover:text-foreground/80">Profil</a>
          </nav>
          <div class="ml-auto flex items-center space-x-4">
            <!-- ThemeToggle placeholder - będzie dodany później -->
            <div class="md:hidden">
              <!-- Hamburger menu placeholder -->
              <button type="button" class="p-2 text-muted-foreground" aria-label="Otwórz menu">
                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                </svg>
              </button>
            </div>
          </div>
        </div>
      </header>

      <main class="flex-1">
        <slot />
      </main>

      <footer class="border-t py-6 md:py-0">
        <div class="container flex h-14 items-center justify-between">
          <p class="text-sm text-muted-foreground">
            © 2024 10xn Flashcards. 
            <a href="/privacy" class="hover:text-foreground transition-colors">Polityka prywatności</a>
          </p>
        </div>
      </footer>
    </div>

    <Toaster client:load />
  </body>
</html>
